{
    "manifest_version": 3,
    "name": "ChatGPT-Utils",
    "version": "2.1.0",
    "author": "Zed Unknown",
    "description": "Various Utilities for ChatGPT",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": [
        "https://chat.openai.com/*",
        "http://chat.openai.com/*",
        "https://chatgpt.com/*",
        "http://chatgpt.com/*"
    ],
    "background": {
        "service_worker": "services/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "http://chat.openai.com/*",
                "https://chatgpt.com/*",
                "http://chatgpt.com/*"
            ],
            "js": [
                "contentScripts/main.js",
                "contentScripts/helpers/loggers.js",
                "contentScripts/helpers/storageManager.js",
                "contentScripts/overlay/overlayCreate.js",
                "contentScripts/overlay/overlayConfig.js",
                "contentScripts/overlay/overlayToggle.js"
            ],
            "type": "module",
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injectedScripts/globals/*.js",
                "injectedScripts/libs/*.js",
                "injectedScripts/containers/*.js",
                "injectedScripts/listeners/*.js",
                "injectedScripts/helpers/*.js",
                "injectedScripts/triggers/*.js",
                "injectedScripts/utils/*.js",

                "contentScripts/overlay/overlayToggle.js",
                "contentScripts/overlay/resources/shadow.html",
                "contentScripts/overlay/resources/shadow.css",
                "contentScripts/overlay/resources/shadow.js"
            ],
            "matches": [
                "https://chat.openai.com/*",
                "http://chat.openai.com/*",
                "https://chatgpt.com/*",
                "http://chatgpt.com/*"
            ]
        }
    ],
    "icons": {
        "16": "assets/icons/default/icon16.png",
        "32": "assets/icons/default/icon32.png",
        "48": "assets/icons/default/icon48.png",
        "128": "assets/icons/default/icon128.png"
    },
    "action": {
        "default_title": "ChatGPT Utils"
    },
    "update_url": "https://zedunknown.github.io/ChatGPT-Utils/update.xml"
}